{
  "name": "my-calculator-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.amirhamza.myapp",
    "productName": "MyElectronApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "exe",
      "icon": "ico/calculator-icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "ico/calculator-icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "ico/calculator-icon.png"
    }
  },
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12"
  }
}
